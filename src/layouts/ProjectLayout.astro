---
import MainLayout from '@/layouts/main.astro';
import { Card } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import { Button } from '@/components/ui/button';
import { Separator } from '@/components/ui/separator';
import { Breadcrumb, BreadcrumbItem, BreadcrumbLink, BreadcrumbList, BreadcrumbPage, BreadcrumbSeparator } from '@/components/ui/breadcrumb';
import type { Project } from '@/data/resume-data';
import { skillUrls } from '@/data/resume-data';

interface Props {
  project: Project;
  prevProject?: Project | null;
  nextProject?: Project | null;
}

const { project, prevProject, nextProject } = Astro.props;
---

<MainLayout title={`${project.title} - Akshat Nigam`}>
  <div class="container mx-auto px-4 py-8 md:py-12 max-w-6xl">
    
    <!-- Breadcrumb Navigation -->
    <nav class="mb-8">
      <Breadcrumb>
        <BreadcrumbList>
          <BreadcrumbItem>
            <BreadcrumbLink href="/">Home</BreadcrumbLink>
          </BreadcrumbItem>
          <BreadcrumbSeparator />
          <BreadcrumbItem>
            <BreadcrumbLink href="/experience">Experience</BreadcrumbLink>
          </BreadcrumbItem>
          <BreadcrumbSeparator />
          <BreadcrumbItem>
            <BreadcrumbPage>{project.title}</BreadcrumbPage>
          </BreadcrumbItem>
        </BreadcrumbList>
      </Breadcrumb>
    </nav>

    <!-- Project Header -->
    <header class="mb-12">
      <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4 mb-6">
        <h1 class="text-3xl md:text-4xl font-bold">{project.title}</h1>
        <Badge variant="default" className="w-fit text-sm px-3 py-1">
          {project.vertical}
        </Badge>
      </div>
      
      <div class="flex flex-col gap-2 text-muted-foreground mb-6">
        <p class="text-base md:text-lg font-semibold">{project.dateRange}</p>
        <p class="text-sm md:text-base"><span class="font-medium">Company:</span> {project.company}</p>
        {project.client && (
          <p class="text-sm md:text-base"><span class="font-medium">Client:</span> {project.client}</p>
        )}
      </div>

      <!-- Technologies -->
      <div class="flex flex-wrap gap-1.5">
        {project.technologies.map((tech) => (
          skillUrls[tech] ? (
            <a href={skillUrls[tech]} target="_blank" rel="noopener noreferrer" className="inline-block">
              <Badge variant="secondary" className="text-xs cursor-pointer hover:opacity-80 transition-opacity">{tech}</Badge>
            </a>
          ) : (
            <Badge variant="secondary" className="text-xs">{tech}</Badge>
          )
        ))}
      </div>
    </header>

    <Separator className="my-8" />

    <!-- Product Description -->
    <section class="mb-12">
      <h2 class="text-2xl md:text-3xl font-bold mb-4">Product Overview</h2>
      <p class="text-base leading-relaxed">
        {project.description}
      </p>
    </section>

    <!-- Contributions -->
    <section class="mb-12">
      <h2 class="text-2xl md:text-3xl font-bold mb-6">Key Contributions</h2>
      <div class="grid grid-cols-1 gap-4">
        {project.contributions.map((contribution, index) => (
          <Card className="p-4 md:p-6">
            <div class="flex gap-3">
              <span class="flex-shrink-0 flex items-center justify-center size-6 rounded-full bg-primary text-primary-foreground text-xs font-bold">
                {index + 1}
              </span>
              <p class="text-sm md:text-base leading-relaxed">
                {contribution}
              </p>
            </div>
          </Card>
        ))}
      </div>
    </section>

    <Separator className="my-12" />

    <!-- Navigation to Other Projects -->
    <nav class="flex flex-col sm:flex-row gap-4 justify-between items-center">
      <div class="flex gap-4 w-full sm:w-auto">
        {prevProject && (
          <a href={`/projects/${prevProject.id}`} class="flex-1 sm:flex-initial">
            <Button variant="outline" className="w-full">
              ← Previous
            </Button>
          </a>
        )}
        {!prevProject && (
          <div class="flex-1 sm:flex-initial">
            <Button variant="outline" disabled className="w-full">
              ← Previous
            </Button>
          </div>
        )}
        
        {nextProject && (
          <a href={`/projects/${nextProject.id}`} class="flex-1 sm:flex-initial">
            <Button variant="outline" className="w-full">
              Next →
            </Button>
          </a>
        )}
        {!nextProject && (
          <div class="flex-1 sm:flex-initial">
            <Button variant="outline" disabled className="w-full">
              Next →
            </Button>
          </div>
        )}
      </div>
      
      <div class="flex gap-4 w-full sm:w-auto">
        <a href="/experience" class="flex-1 sm:flex-initial">
          <Button variant="secondary" className="w-full">
            All Projects
          </Button>
        </a>
        <a href="/" class="flex-1 sm:flex-initial">
          <Button variant="default" className="w-full">
            Home
          </Button>
        </a>
      </div>
    </nav>
  </div>
</MainLayout>
